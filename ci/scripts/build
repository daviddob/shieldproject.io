#!/bin/bash
set -eux

echo "HI!"

set

ls -lah

#ls -ltR


echo "GITHUB RELEASE NOTES:"
echo "====================="
cat releases/body
echo "====================="
echo "VERSION:"
echo "====================="
cat releases/version
cat releases/tag
echo "====================="


VERSION=$(cat releases/version)
NOTES=$(cat releases/body)
RELEASE="https://github.com/starkandwayne/shield/releases/tag/$(cat releases/tag)"

(
cat git/data/releases.json | \
    jq -r '{"all":.all}' | spruce merge -
echo "- notes: |"
cat releases/body | sed -e 's/^/    /'
echo "  url:     $RELEASE"
echo "  version: $VERSION"
) | spruce json
